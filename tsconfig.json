{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // --- clés importantes pour Vite + ESM + Node ---
    "module": "ESNext",
    "moduleResolution": "bundler",       // TS >= 5. Si souci, essaie "node16" ou "nodenext"
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],                   // <— indispensable pour node:path, fileURLToPath, etc.

    // --- tes préférences conservées ---
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false
  }
}
